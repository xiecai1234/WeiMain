<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:weimain="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mingrisoft.weimain.MainActivity">
    <!--显示主要内容-->
<android.support.v4.view.ViewPager
    android:id="@+id/id_viewpager"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

</android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/tab_bg">
        <view.ChangeIcon
            android:id="@+id/id_changeicon_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            weimain:icon="@drawable/img_icon1"
            weimain:text="@string/icon_text1"
            android:padding="5dp"
            weimain:text_size="12sp"
            weimain:color="#ff45c01a"/>
        <view.ChangeIcon
            android:id="@+id/id_changeicon_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            weimain:icon="@drawable/img_icon2"
            weimain:text="@string/icon_text2"
            weimain:text_size="12sp"
            weimain:color="#ff45c01a" />

        <view.ChangeIcon
            android:id="@+id/id_changeicon_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            weimain:icon="@drawable/img_icon3"
            weimain:text="@string/icon_text3"
            weimain:text_size="12sp"
            weimain:color="#ff45c01a" />

        <view.ChangeIcon
            android:id="@+id/id_changeicon_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            weimain:icon="@drawable/img_icon4"
            weimain:text="@string/icon_text4"
            weimain:text_size="12sp"
            weimain:color="#ff45c01a" />

    </LinearLayout>
</LinearLayout>
